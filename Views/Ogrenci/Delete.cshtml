@model Ogrenci

<p>
    <strong> @Model.OgrenciAd @Model.OgrenciSoyad </strong> isimli öğrenciyi silmek istediğinizden emin misiniz ?
</p>
<form asp-action="DeleteX" asp-controller="Ogrenci" method="post">
    <input type="hidden" name="id" value="@Model.OgrenciId">
    <button type="submit" class="btn btn-danger">Evet</button>
    <a asp-action="Index" class="btn btn-primary">Hayır</a>
</form>